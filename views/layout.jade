doctype 5
html
  head
    title= title
    != css('client')
  body.userNotFetched
    .navbar.navbar-inverse.navbar-fixed-top
      .navbar-inner
        .container-fluid
          a.brand(href='/') Home
          p.navbar-text.pull-right
            span.withUser
              | Logged in as 
              a#currentUser.navbar-link(href='#')
            span.withUser
              button#signOut Sign out
            span.withoutUser
              a#signInButton(href='#signInModal', data-toggle='modal', data-target='#signInModal') Sign in
    #main.container-fluid
      block content
    include users/signInModal
    script(src='//ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js', type='text/javascript')
    script(src='/js/templates.js', type='text/javascript')
    != js('client')
