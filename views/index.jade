extends layout

block content
  h1#top-bar= title
  ul.resto-tiles
    li.resto-tile
      header.tile-header
        .resto-image
          img(src="/img/sample.png")
          h3.resto-name Acme Oyster House
      .contents
        .wait-time 15-30min wait time
        .info
          .details
            p.description
              | For over 100 years, Acme has been satisfying the hungriest of people all
              | over the world! It's quality you can taste in the fresh... more Â»

            p.address
              | 724 Iberville Street
              | 504.522.5973
          .links
            a.button.map 1.2mi
            a.button.link Website
            a.button.call Call Now
          .rating-wrapper
          h4.rating-title
          .rating-bar
            .no-wait
            .small-wait
            .long-wait
            .full
      footer.tile-footer
        .choices
          a.button.no-wait No Wait
          a.button.small-wait Shore Wait
          a.button.long-wait Long Wait
          a.button.unknown Unknown
