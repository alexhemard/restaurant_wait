extends layout

block content
  h1#top-bar= title
  ul.resto-tiles
    li.resto-tile
      header.tile-header
        .resto-image
          img(src="/img/sample.png")
          h3.resto-name Acme Oyster House
      .contents
        h4.wait-time 15-30min wait
        .info
          .details
            p.description
              | For over 100 years, Acme has been satisfying the hungriest of people all
              | over the world! It's quality you can taste in the fresh... more Â»

            p.address
              | 724 Iberville Street
              br
              | 504.522.5973
          .links
            ul.unstyled
              li.link
                a(data-behavior="map").btn.btn-small.map
                  i.icon-map-marker
                  |  1.2 miles
              li.link
                a(data-behavior="website").btn.btn-small.website
                  i.icon-link
                  |  Website
              li.link
                a(data-behavior="call").btn.btn-small.call
                  i.icon-phone
                  |  Call Now
          .rating-wrapper
      h4.rating-title
      .rating-bar
        .no-wait
        .small-wait
        .long-wait
        .full
      footer.tile-footer
        .choices
          a(data-behavior="no-wait").btn.btn-small. No Wait
          a(data-behavior="small-wait").btn.btn-small.small-wait Shore Wait
          a(data-behavior="long-wait").btn.btn-small.long-wait Long Wait
          a(data-behavior="unknown").btn.btn-small.unknown Unknown
